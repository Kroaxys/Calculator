<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">


    <Grid RowDefinitions="auto,*,*,*,*,*,*,*,*,*" 
          ColumnDefinitions="*,*,*,*" >

        <Entry Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" x:Name="EntryCalculation"/>
        <Entry Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" x:Name="EntryResult"/>

        <!--Row 1-->
        <Button Grid.Row="2" Grid.Column="0" Text="%" Clicked="NumberButton"/>
        <Button Grid.Row="2" Grid.Column="1" Text="CE" Clicked="NumberButton"/>
        <Button Grid.Row="2" Grid.Column="2" Text="C" Clicked="NumberButton"/>
        <Button Grid.Row="2" Grid.Column="3" Text="Delete" Clicked="NumberButton"/>

        <!--Row 2-->
        <Button Grid.Row="3" Grid.Column="0" Text="1" Clicked="NumberButton"/>
        <Button Grid.Row="3" Grid.Column="1" Text="2" Clicked="NumberButton"/>
        <Button Grid.Row="3" Grid.Column="2" Text="3" Clicked="NumberButton"/>
        <Button Grid.Row="3" Grid.Column="3" Text="/" Clicked="SymbolButton"/>

        <!--Row 3-->
        <Button Grid.Row="4" Grid.Column="0" Text="4" Clicked="NumberButton"/>
        <Button Grid.Row="4" Grid.Column="1" Text="5" Clicked="NumberButton"/>
        <Button Grid.Row="4" Grid.Column="2" Text="6" Clicked="NumberButton"/>
        <Button Grid.Row="4" Grid.Column="3" Text="*" Clicked="SymbolButton"/>


        <!--Row 4-->
        <Button Grid.Row="5" Grid.Column="0" Text="7" Clicked="NumberButton"/>
        <Button Grid.Row="5" Grid.Column="1" Text="8" Clicked="NumberButton"/>
        <Button Grid.Row="5" Grid.Column="2" Text="9" Clicked="NumberButton"/>
        <Button Grid.Row="5" Grid.Column="3" Text="+" Clicked="SymbolButton"/>


        <!--Row 5-->
        <Button Grid.Row="6" Grid.Column="0" Text="+/-" Clicked="NumberButton"/>
        <Button Grid.Row="6" Grid.Column="1" Text="0" Clicked="NumberButton"/>
        <Button Grid.Row="6" Grid.Column="2" Text="," Clicked="NumberButton"/>
        <Button Grid.Row="6" Grid.Column="3" Text="=" Clicked="AnswerButton"/>


        <!--Row 6-->
        <Button Grid.Row="7" Grid.Column="0" Text="" Clicked="NumberButton"/>
        <Button Grid.Row="7" Grid.Column="1" Text="" Clicked="NumberButton"/>
        <Button Grid.Row="7" Grid.Column="2" Text="" Clicked="NumberButton"/>
        <Button Grid.Row="7" Grid.Column="3" Text="" Clicked="NumberButton"/>


        <!--Row 7-->
        <Button Grid.Row="8" Grid.Column="0" Text="" Clicked="NumberButton"/>
        <Button Grid.Row="8" Grid.Column="1" Text="" Clicked="NumberButton"/>
        <Button Grid.Row="8" Grid.Column="2" Text="" Clicked="NumberButton"/>
        <Button Grid.Row="8" Grid.Column="3" Text="" Clicked="NumberButton"/>








    </Grid>
    
</ContentPage>
